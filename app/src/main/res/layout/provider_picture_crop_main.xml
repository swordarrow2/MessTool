<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ClipSquareImageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/doneBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="#000"
            android:textSize="22sp" />
    </LinearLayout>

    <com.meng.messtool.modules.picture.barcode.ClipSquareImageView
        android:id="@+id/clipSquareIV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ClipSquareImageView:ClipSquareIV_BorderColor="@android:color/transparent"
        ClipSquareImageView:ClipSquareIV_BorderDistance="10dp"
        ClipSquareImageView:ClipSquareIV_OutsideColor="#f2ffffff" />

</LinearLayout>

